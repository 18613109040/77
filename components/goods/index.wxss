/*content*/
.drawer_box {
 width: 80%;
 overflow: hidden;
 position: fixed;
 top: 50%;
 left:0;
 z-index: 9999;
 background: #fff;
 margin-top:-100px;
 margin-left: 10%;
 border-radius: 16rpx;

}
.drawer_box .x-calnel{
  float: right;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.drawer_title{
