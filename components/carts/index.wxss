.iconfont{ font-family:"iconfont" !important; font-size:16px; font-style:normal; -webkit-font-smoothing: antialiased; -webkit-text-stroke-width: 0.2px; -moz-osx-font-smoothing: grayscale;}
.icon-desc:after{
  content: '\e620';
  font-size: 50rpx;
}
.icon-add:after{
  content: '\e628';
  font-size: 50rpx;
}
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #333333; 
 opacity: 0.6; 
 overflow: hidden; 
} 

.image-url image{
  width: 28px;
  height: 28px;
 border: 1px solid #eaeaea;
  border-radius:100%;
  padding: 10rpx;
  
}

.drawer_box {
 width: 80%;
 overflow: hidden;
 position: fixed;
 top: 50%;
 left:0;
 z-index: 1001;
 background: #fff;
 margin-top:-100px;
 margin-left: 10%;
 border-radius: 16rpx;
}
.drawer_title{
 padding:16rpx 40rpx;
 font: 20px "microsoft yahei";
 text-align: center;
 border-bottom: 1px solid  #E8E8EA;
}
.drawer_title .name{
  text-align: center;
  width: 100%;
}

.body-base{
  font-size: 16px;
}

.drawer_box .x-calnel{
  float: right;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.drawer_content {
 font-size: 12px;
}
.drawer_content  .drawer-body{
  height:100%;
  overflow-y: auto;

}
.flex{
  display: flex;
  display: -webkit-flex;
}
.space-between{
   justify-content:space-between;
}
.align-items-center{
  align-items: center;
}

.cart-count{
  overflow: hidden;
  padding:10rpx 30rpx 6rpx 30rpx;
  border-bottom: 1px solid #eaeaea;
}
.text-hidden-1{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.body-m{
  font-size: 12px;
}

 .price{
  
   padding: 5rpx 0rpx 0rpx 0rpx;
}

.dish-item-count{
  font-size: 13px;
  display: flex;
  flex-basis: 160rpx;
  

}
.dish-item-count .dish-item-tab{
  flex:1;
  vertical-align: middle;
}

.cart-count .dish-item-count-minus{
  height: 100rpx;
  line-height: 104rpx;
}
.cart-count .dish-item-count-plus{
  height: 100rpx;
  line-height: 104rpx;
}
.goods-name{
  width: 60%;
  margin-left: 20rpx;
  word-wrap:break-word; 
  overflow: hidden;
}
.cart-count .dish-item-count-text {
  line-height: 100rpx;
  text-align: center;
  
}
.drawer_footer{
 padding:24rpx 20rpx;
 border-top: 1px solid #E8E8EA;
 background: #F8F7FC ;
 position: relative;
}
.drawer_footer .money{
  color: #FF004C ;
  margin-right: 10rpx;
}
.drawer_footer .add_cart{
  background: #FF004C;
  padding:0 40rpx;
  height: 62rpx;
  line-height: 62rpx;
  color: white;
  text-align: center;
  position: absolute;
  right: 30rpx;
  border-radius: 10rpx;
  top:15rpx;
  font-size: 14px;
}
.shuoming{
  color: #999;
  font-size: 12px;
}
/****toast样式*****/
.toast_content_box {
  top:50%;
  position: absolute;
  z-index: 1002;
  left: 50%;
  margin-left: -150rpx;
}
.toast_content {
  width: 300rpx;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
}
.toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}