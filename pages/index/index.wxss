page {
  background: #fff;
}

.icon-address {
  width: 27rpx;
  height: 30rpx;
  vertical-align: sub;
  margin-right: 10rpx;
  margin-bottom: 4rpx;
}

.index-body .search-navigator{
  background-color: rgba(0,0,0,0.05);
  border-radius: 100px;

}
.index-body .search-navigator .search-in {
  color: #333;
  padding-left: 20rpx;
  background: transparent;
  background-color: transparent;
}
.index-body .search-navigator .icon-search {
  margin-left: 400rpx;
  color: #999;
}
.search-navigator text{
  font-size: 28rpx;
  color: #ddd;
  position: absolute;
  right: 80rpx;
  top: 8rpx;
}

.a-top {
  position: relative;
  z-index: 10;
  margin:0 10px;
  /*margin-top: 15rpx;*/
  /*margin-left: 2%;*/
  /*width: 96%;*/
  /*margin-right: 2%;*/
}

.shop-name {
  font-size: 16px;
}

.text-address {
  font-size: 26rpx;
  overflow: hidden;
}

.name-d {
  background: #000;
  opacity: 0.5;
  border-radius: 100px;
  padding: 0rpx 20rpx 0rpx 20rpx;
  /*height: 60rpx;
  line-height: 60rpx;*/
  color: white;
  width: 180rpx;
}

.name-d .arrow {
  width: 12rpx;
  height: 21rpx;
  vertical-align: middle;
  display: inline-block;
  margin-left: 6rpx;
}

.flex-6 {
  margin-left: 20rpx;
  flex: 2;
}

.top_img {
  width: 710rpx;
  height: 200rpx;
  padding: 20rpx;
}

.nav_list {
  text-align: center;
  height: 340rpx;
}

.nav_list .nav_li {
  float: left;
  width: 25%;
  padding-bottom: 10rpx;
  font-size: 14px;
  color: #2e2e2e;
}
@keyframes fade_in{
  0% { opacity: 0}
  100%{opacity: 1}
}
.nav_list .nav_li .fade_in{
  animation: fade_in 1s both;
}

.nav_list .nav_li image {
  padding: 16rpx;
}

.flex-item {
  flex-direction: row;
}

.nav_about_shop {
  height: 100%;
  font-size: 16px;
  color: #2e2e2e;
  padding-left: 30rpx;
  position: relative;
}

.nav_about_shop .nav_about_shop_img {
  width: 8rpx;
  height: 32rpx;
  background: #ff5c9b;
  position: absolute;
  top: 8rpx;
}

.nav_about_shop text {
  padding-left: 20rpx;
}

.center_tab {
  padding-top: 20rpx;
  padding-bottom:10px;
  box-sizing: border-box;
  display: flex;
}

.center_tab_list {
  float: left;
  width: 33.33%;
  text-align: center;
  font-size: 14px;
  color: #2e2e2e;
  position: relative;
}

.center_tab_list .bottom_line {
  width: 40rpx;
  height: 4rpx;
  background-color: #ff5c9b;
  position: absolute;
  left: 108rpx;
  bottom: -10rpx;
}

.filter {
  border-left: 1rpx solid #ddd;
}

.filter image {
  width: 28rpx;
  height: 28rpx;
  padding-right: 8rpx;
}

.shop_details {
  padding: 40rpx 30rpx 20rpx 30rpx;
  position: relative;
  font-size: 12px;
  color: #999;
  border-bottom: 1px solid #ddd;
  overflow: hidden;
  
}
