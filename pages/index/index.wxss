.shop_images{
  position: relative;
  float: left;
}
.shop_info_item{
  overflow: hidden;
}
.shop_details .logo_img {
  width: 110rpx;
  height: 110rpx;
  /*margin-top: 10rpx;*/
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  border:1px solid #ddd;
  border-radius: 4px;
}
.shop_details .logo_icon{
  position: absolute;
  width:36px;
  height: 13px;
  z-index: 10;
}



.purchase {
  padding-bottom: 10rpx;
  position: relative;
}
.purchase .p_text{
  text-overflow: ellipsis;
  overflow: hidden;
  width:70%;
  white-space: nowrap;
}
.purchase .p_text text{
  white-space: nowrap;
}
.purchase .active-nums {
  position: absolute;
  right: 5px;
  top: 0;
  border: 1rpx solid #ff5c9b;
  border-radius: 2.5px;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #ff5c9b;
  box-sizing: content-box;
  font-size: 12px;
  background-color: transparent;
  text-align:center;
}

.bottom_img {
  width: 24rpx;
  height: 20rpx;
  padding-right: 14rpx;
}

.shop_show {
  padding-top: 30rpx;
  /*border-bottom: 1rpx solid #ddd;*/
  height: 320rpx;
}

.img_list {
  float: left;
  width: 33.33%;
}

.img_list image {
  padding-left: 4rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}

.sweet {
  font-size: 12px;
  height: 17px;
  color: #2e2e2e;
  white-space: nowrap;
  display: block;
  margin-right: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.money {
  font-size: 12px;
  color: #ff5c9b;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.line_hidden {
  visibility: hidden;
}

.line_show {
  visibility: visible;
}



.swiper-view{
  position: relative;
  margin:10px;
}
.swiper-dot{
  position: absolute;
  bottom:10px;
  right: 15px;
  background-color: rgba(0,0,0,.6);
  padding:5px 15px;
  border-radius: 15px;
  font-size:12px;
  color: #fff
}
.slide-image{
  width:100%;
  height:150px
}
