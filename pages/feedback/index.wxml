<!--pages/feedback/index.wxml-->
<view class='content'>
  <form bindsubmit="formSubmit" report-submit="true">
  <view class="section">
    <textarea auto-height placeholder="请留下您宝贵的意见或建议，我们将努力改进..."  auto-focus  name="descript"/>
  </view>
  <view class="section">
    <input  placeholder="请留下电话号码,以便我们回复您" name="phone"/>
  </view>
  <button   class='submit-btn'  formType="submit" style="background:{{color}}"> 提交 </button>
  </form>
</view>

