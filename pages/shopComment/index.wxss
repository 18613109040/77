  width: 200rpx;
  height: 200rpx;
}
.item .arrow{
  width:16px;
  height:16px;
  float: right;
  margin-top: 30rpx;
  margin-right: 30rpx;
}


.tabbars{
  margin-top: 20rpx;
}
.bars{
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  background: #fff;
  font-size: 14px;
  color: #333;
  border-bottom: 1px solid #EAEAEA;
}
.bars .bar{
  flex: 1;
  text-align: center;
}
.bars .bar wx-text{
  height: 86rpx;
  display: inline-block;
}

.tabs-content{
    position: relative;
}
.tabpanel{
     -webkit-flex-shrink: 0;
    -ms-flex-negative: 0;
    flex-shrink: 0;
    width: 100%;
    -webkit-transition: opacity .45s;
    transition: opacity .45s;
    opacity: 1; 
}


.comment-contents{
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
}
.tabpanel .pingfen{
  background: #fff;
  padding:30rpx 0;
  text-align: center;
}
.tab-header{
  border-bottom: 1px solid #EAEAEA;

}
.tab-header .ul{
  padding: 30rpx; 
 
}

.tab-header .ul .li {
  margin: 0 10px 0px 0;
  float: left;
  font-size: 12px;
  padding:8rpx 10rpx;
}
.tab-header .ul .li.comment{
  background:#EBF5FF;
  color: #333;
  
}
.tab-header .ul .li.uncomment{
  background: #F5F5F5;
  color: #aaa;
}


