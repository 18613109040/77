.be_top .be_top_left {
  font-size: 16px;
  flex: 3;
}

.be_top .be_top_content {
  flex: 5;
  font-size: 16px;
  color: #838383;
}

.be_bottom {
  padding: 20rpx;
  display: flex;
}

.be_bottom_left .uploadImgBox image:nth-child(1) {
  margin-left: 0;
}

.be_bottom .be_bottom_left  #image {
  margin-left: 30rpx;
}

