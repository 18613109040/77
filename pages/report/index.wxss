/* 店铺信息 */

.nav {
  padding: 10px;
  background: #fff;
  display: flex;
  box-sizing: border-box;
  height: 86px;
  align-items: center; /*垂直居中*/
}

.nav .nav_left .nav_images { 
  width: 112rpx;
  height: 112rpx;
}

.nav .nav_right {
  padding-left: 20rpx;
  width: 80%;
  overflow: hidden;
}

.nav .nav_right .nav_right_top, .nav_right_nav {
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav .nav_right .nav_right_bottom {
  font-size: 12px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

